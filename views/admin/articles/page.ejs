<%- include('../../partials/header') %> <%- include('../../partials/homenavbar')
%>
<body>
  <section id="gallery">
    <div class="container">
      <div class="row">
        <% result.articles.rows.forEach(article => { %>
        <div class="col-lg-4 mb-4">
          <div class="card">
            <img
              src="<%= article.imageUrl %>"
              alt="imagen no encontrada"
              class="card-img-top"
            />
            <div class="card-body">
              <h5 class="card-title"><%= article.title %></h5>
              <p class="card-text"><%- article.body.substr(0, 300) %>...</p>
              <br />
              <a
                href="/<%= article.slug %>"
                class="btn btn-outline-success btn-sm"
                >Leer Articulo</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
    <div class="row mt-2 mb-5">
      <div class="col col-12">
        <% if (result.page > 2) { %>
        <a
          style="float: left"
          class="btn btn-secondary"
          href="/articles/page/<%= result.page - 1 %> "
          >Prev</a
        >
        <% } else if(result.page == 2) { %>
        <a style="float: left" class="btn btn-secondary" href="/">Prev</a>
        <% } %> <% if (result.next) { %>
        <a
          style="float: right"
          class="btn btn-secondary"
          href="/articles/page/<%= result.page + 1 %> "
          >Next</a
        >
        <% } %>
      </div>
    </div>
  </section>
</body>
<%- include('../../partials/footer') %>
