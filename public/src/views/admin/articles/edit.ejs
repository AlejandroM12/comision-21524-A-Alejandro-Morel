<%- include('../../partials/header') %> <%- include('../../partials/navbar') %>

<div class="container">
  <div class="card mt-3">
    <div class="card-header">
      <h2>Editar Articulo</h2>
    </div>
    <div class="card-body">
      <form action="/articles/update" method="POST">
        <input type="hidden" value="<%= article.id %>" name="id" />
        <input
          class="form-control mb-3"
          type="text"
          name="title"
          placeholder="Defina el tÃ­tulo del articulo"
          id=""
          value="<%= article.title %> "
        />
        <textarea
          class="form-control"
          placeholder="Escriba el articulo"
          name="body"
          id="article"
        >
<%- article.body %></textarea
        >
        <label class="mt-2">Selecione una categoria:</label>
        <select name="category" id="" class="form-control mb-1">
          <% categories.forEach((category) => { %> <% if (category.id ==
          article.categoryId) { %>
          <option value="<%= category.id %>" selected>
            <%= category.title %>
          </option>
          <% } else { %>
          <option value="<%= category.id %>"><%= category.title %></option>
          <% } %> <% }) %>
        </select>
        <button class="btn btn-success mt-1">Actualizar</button>
      </form>
    </div>
  </div>
</div>

<div id="content" style="display: none"></div>

<%- include('../../partials/footer') %>

<script src="../../../tinymce/js/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    language: 'es-ES',
    selector: '#article',
    plugins: [
      'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons',
    ],
  });
</script>
